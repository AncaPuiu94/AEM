<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Hero Component"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <style
                jcr:primaryType="cq:Panel"
                title="Style and Hero Image">
                <items jcr:primaryType="cq:WidgetCollection">
                    <type
                        jcr:primaryType="cq:Widget"
                        anchor="60%"
                        fieldLabel="Display Type"
                        name="./displayType"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <o2
                                jcr:primaryType="nt:unstructured"
                                text="Image on Right of Content"
                                value="imageRight"/>
                            <o1
                                jcr:primaryType="nt:unstructured"
                                text="Image on Left of Content"
                                value="imageLeft"/>
                            <o3
                                jcr:primaryType="nt:unstructured"
                                text="Image on Top of Content"
                                value="imageTop"/>
                            <o4
                                jcr:primaryType="nt:unstructured"
                                text="Image on Bottom of Content"
                                value="imageBottom"/>
                        </options>
                    </type>
                    <imageurl
                        jcr:primaryType="cq:Widget"
                        anchor="60%"
                        fieldLabel="Image Action Link"
                        name="./imageurl"
                        xtype="textfield"/>
                    <imagealttext
                        jcr:primaryType="cq:Widget"
                        anchor="60%"
                        fieldLabel="Image Alt Text"
                        name="./imagealttext"
                        xtype="textfield"/>
                    <image
                        jcr:primaryType="cq:Widget"
                        cropParameter="./imageCrop"
                        ddGroups="media"
                        fileNameParameter="./fileName"
                        fileReferenceParameter="./fileReference"
                        height="300"
                        mapParameter="./imageMap"
                        name="./file"
                        requestSuffix=".img.png"
                        rotateParameter="./imageRotate"
                        title="Image"
                        xtype="html5smartimage"/>
                </items>
            </style>
            <title
                jcr:primaryType="cq:Panel"
                title="Title">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="cq:Widget"
                        externalStyleSheets="/etc/designs/AEM62App/clientlibs/css/static.css"
                        fieldLabel="Title"
                        name="./title"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="nt:unstructured"
                            externalStyleSheets="/etc/designs/AEM62App/clientlibs/css/static.css"
                            removeSingleParagraphContainer="{Boolean}true"
                            xtype="textfield"/>
                    </title>
                </items>
            </title>
            <subtitle
                jcr:primaryType="cq:Panel"
                title="SubTitle">
                <items jcr:primaryType="cq:WidgetCollection">
                    <subtitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Sub-Title"
                        name="./subtitle"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="nt:unstructured"
                            externalStyleSheets="/apps/AEM62App/components/hero/clientlibs/css/static.css"
                            removeSingleParagraphContainer="{Boolean}true"
                            xtype="textfield"/>
                    </subtitle>
                </items>
            </subtitle>
            <description
                jcr:primaryType="cq:Panel"
                title="Description">
                <items jcr:primaryType="cq:WidgetCollection">
                    <description
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Description"
                        name="./description"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="nt:unstructured"
                            externalStyleSheets="/apps/AEM62App/components/hero/clientlibs/css/static.css"
                            removeSingleParagraphContainer="{Boolean}true"
                            xtype="textfield"/>
                    </description>
                </items>
            </description>
            <footnote
                jcr:primaryType="cq:Panel"
                title="Footnote">
                <items jcr:primaryType="cq:WidgetCollection">
                    <footnote
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Footnote"
                        name="./footnote"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="nt:unstructured"
                            externalStyleSheets="/apps/AEM62App/components/hero/clientlibs/css/static.css"
                            removeSingleParagraphContainer="{Boolean}true"
                            xtype="textfield">
                            <rteConfig
                                jcr:primaryType="cq:Widget"
                                path="/apps/AEM62App/components/rteconfig/rtePlugins.infinity.json"
                                xtype="cqinclude"/>
                        </fieldConfig>
                    </footnote>
                </items>
            </footnote>
            <links
                jcr:primaryType="cq:Panel"
                title="Links">
                <items jcr:primaryType="cq:WidgetCollection">
                    <links
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Links"
                        name="./links"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="nt:unstructured"
                            optionsProvider="Ejst.x3.provideOptions"
                            xtype="ejstcustom"/>
                    </links>
                </items>
            </links>
            <otherimages
                jcr:primaryType="cq:Panel"
                title="Images">
                <items jcr:primaryType="cq:WidgetCollection">
                    <image1
                        jcr:primaryType="cq:Widget"
                        sling:resourceType="foundation/components/image"
                        ddGroups="media"
                        fieldLabel="Image1"
                        fieldNameParameter="./image1/fileName"
                        fileReferenceParameter="./image1/fileReference"
                        height="{Long}100"
                        name="./image1/file"
                        title="Image1"
                        width="{Long}200"
                        xtype="html5smartimage"/>
                </items>
            </otherimages>
        </items>
    </items>
</jcr:root>
